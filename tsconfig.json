{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
      // "/@kol/*": ["src/biz/app/kol/views/*"],
      // "/@ocpm/*": ["src/biz/app/ocpm/views/*"],
      // "/@common/*": ["src/biz/app/common/views/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  // "exclude": ["node_modules"]
  "exclude": ["node_modules", "dist", "**/*.js"]
}
